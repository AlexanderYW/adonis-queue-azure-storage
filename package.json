{
  "name": "adonis-queue-azure-storage",
  "version": "1.0.0",
  "description": "",
  "main": "./build/providers/QueueProvider.js",
  "files": [
    "build/src",
    "build/adonis-typings",
    "build/providers",
    "build/commands",
    "build/templates"
  ],
  "typings": "./build/adonis-typings/index.d.ts",
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "pretest": "npm run lint",
    "test": "node -r ts-node/register/transpile-only bin/test.ts",
    "cover": "tsc && nyc --reporter=html --reporter=text npm run test",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc",
    "copyfiles": "copyfiles \"templates/**/*.txt\" build",
    "build": "npm run compile && npm run copyfiles",
    "prepublishOnly": "npm run build",
    "commit": "git-cz",
    "release": "np --message=\"chore(release): %s\"",
    "version": "npm run build"
  },
  "keywords": [
    "azure"
  ],
  "author": "Alexander Wennerstr√∏m <alexanderw0310@gmail.com>",
  "license": "ISC",
  "adonisjs": {
    "types": "@cavai/adonis-queue",
    "providers": [
      "@cavai/adonis-queue"
    ],
    "templates": {
      "start": [
        {
          "src": "jobs.txt",
          "dest": "jobs"
        }
      ],
      "config": [
        {
          "src": "queue.txt",
          "dest": "queue"
        }
      ]
    },
    "commands": [
      "@cavai/adonis-queue/build/commands"
    ]
  },
  "devDependencies": {
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/mrm-preset": "^5.0.3",
    "@adonisjs/require-ts": "^2.0.13",
    "@japa/expect": "^2.0.1",
    "@japa/run-failed-tests": "^1.1.0",
    "@japa/runner": "^2.2.2",
    "@japa/spec-reporter": "^1.3.2",
    "@poppinss/dev-utils": "^2.0.3",
    "@types/node": "^18.11.18",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.0.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "japa": "^4.0.0",
    "mrm": "^4.1.13",
    "nyc": "^15.1.0",
    "prettier": "^2.8.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@azure/identity": "^3.1.3",
    "@azure/storage-queue": "^12.11.0",
    "@cavai/adonis-queue": "^1.1.2"
  },
  "mrmConfig": {
    "core": false,
    "license": "MIT",
    "services": [
      "github-actions"
    ],
    "minNodeVersion": "14.15.4",
    "probotApps": [
      "stale"
    ],
    "runGhActionsOnWindows": true
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptPackage",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "nyc": {
    "include": "src"
  },
  "directories": {
    "test": "tests"
  }
}
